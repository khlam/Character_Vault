<div class="frame">
    <form action="/add-row" method="post">
        <input type="hidden" name="destination" value="{{HTTP_REFERER}}"/>
        <fieldset>
            <legend>Item Information:</legend>
            {{#each fk_fields}}
            <div>
                <span>{{this.[0].[1]}}</span>
                <select>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="opel">Opel</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
            {{/each}}
            {{#each fields}}
            <div>
                <span>{{this.COLUMN_NAME}}</span>
                <input name="{{this.COLUMN_NAME}}" type="text" value=""/>
            </div>
            {{/each}}
            <input type="submit" value="Submit">
        </fieldset>
    </form>
</div>
